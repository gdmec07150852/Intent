<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.administrator.intent.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显式启动activity"
        android:onClick="componentname"
        android:id="@+id/button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式启动activity"
        android:onClick="intentfilter"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:id="@+id/button2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.gdmec.cn"
        android:id="@+id/url"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开网页"
        android:onClick="view"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="110"
        android:id="@+id/phone"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拨号"
        android:onClick="dial"
        android:id="@+id/button4"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转换"
        android:onClick="startactivityforresult"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:id="@+id/button5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:text="等待转换"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button5" />
</LinearLayout>
